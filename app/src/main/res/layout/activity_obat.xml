<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObatActivity">

    <RelativeLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#13A1F1">

        <TextView
            android:layout_width="111dp"
            android:layout_height="42dp"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="Obat"
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_obat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content1"
        android:layout_below="@+id/nav"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/costumebg2"
        android:elevation="12dp"
        android:fontFamily="sans-serif"
        android:text="@string/healthy_care"
        android:textColor="#3174DC"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="82dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_antangin" />
        </RelativeLayout>

        <Button
            android:id="@+id/antangin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="Lihat"
            android:textSize="10sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/content2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/nav"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/costumebg2"
        android:elevation="12dp"
        android:fontFamily="sans-serif"
        android:text="@string/healthy_care"
        android:textColor="#3174DC"
        android:textSize="40sp"
        android:textStyle="bold">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="82dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_neurotam" />
        </RelativeLayout>

        <Button
            android:id="@+id/Neurotam"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="lihat"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content3"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/content1"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/costumebg2"
        android:elevation="12dp"
        android:fontFamily="sans-serif"
        android:text="@string/healthy_care"
        android:textColor="#3174DC"
        android:textSize="40sp"
        android:textStyle="bold">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="82dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_parasetamol" />
        </RelativeLayout>

        <Button
            android:id="@+id/parasetamol"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="lihat"
            android:textSize="10sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/content4"
        android:layout_below="@+id/content2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/costumebg2"
        android:elevation="12dp"
        android:fontFamily="sans-serif"
        android:text="@string/healthy_care"
        android:textColor="#3174DC"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="82dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_parasetamol" />
        </RelativeLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="lihat"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content5"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/content3"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/costumebg2"
        android:elevation="12dp"
        android:fontFamily="sans-serif"
        android:text="@string/healthy_care"
        android:textColor="#3174DC"
        android:textSize="40sp"
        android:textStyle="bold">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="82dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_parasetamol" />
        </RelativeLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="lihat"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content6"
        android:layout_below="@+id/content4"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/costumebg2"
        android:elevation="12dp"
        android:fontFamily="sans-serif"
        android:text="@string/healthy_care"
        android:textColor="#3174DC"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="82dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_parasetamol" />
        </RelativeLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="lihat"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>